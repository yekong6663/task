<robot name="yozora">
    <link name="base">
        <visual>
            <geometry>
                <sphere radius="2.0"/>
            </geometry>
            <material>
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    <link name="hand">
        <visual>
            <geometry>
                <cylinder length="1.0" radius="1.0"/>
            </geometry>
            <material>
                <color rgba="1 0 1 1"/>
            </material>
        </visual>
    </link>
    <joint name="base_and_hand" type="revolute">
        <parent link="base"/>
        <child link="hand"/>
        <origin xyz="0 0 1" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14" effort="10" velocity="1.0"/>
    </joint>
</robot>